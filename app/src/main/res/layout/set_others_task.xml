<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/back"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:textColor="@android:color/black"
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="178dp"
        android:layout_marginTop="254dp"
        android:text="Name:" />

    <android.support.design.widget.TextInputEditText
        android:id="@+id/set_task_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_alignBaseline="@+id/textView17"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="51dp"
        android:hint="task_name" />

    <TextView
        android:textColor="@android:color/black"
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="19dp"
        android:text="Name:" />

    <android.support.design.widget.TextInputEditText
        android:textColor="@android:color/black"
        android:id="@+id/set_task_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="86dp"
        android:hint="task_name" />

    <android.support.design.widget.TextInputEditText
        android:textColor="@android:color/black"
        android:id="@+id/set_task_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/text"
        android:layout_alignStart="@+id/set_task_date"
        android:hint="Time to finish task" />

    <android.support.design.widget.TextInputEditText
        android:textColor="@android:color/black"
        android:id="@+id/set_task_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/text3"
        android:layout_alignParentStart="true"
        android:layout_marginStart="72dp"
        android:hint="Date to finish task" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_alignStart="@+id/textView"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="237dp"
        android:text="Type:" />

    <android.support.v7.widget.AppCompatSpinner
        android:textColor="@android:color/black"
        android:id="@+id/set_task_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/set_task_time"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="223dp"
        android:text="TextView" />

    <TextView
        android:textColor="@android:color/black"
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="7dp"
        android:layout_marginBottom="156dp"
        android:text="Description:" />

    <android.support.design.widget.TextInputEditText
        android:textColor="@android:color/black"
        android:id="@+id/set_task_description"
        android:layout_width="247dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView19"
        android:layout_alignParentStart="true"
        android:layout_marginStart="118dp"
        android:layout_marginTop="-13dp"
        android:hint="Description" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/set_task_btn"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="344dp"
        android:layout_marginBottom="0dp"
        android:clickable="true"
        android:focusable="true"
        app:backgroundTint="@android:color/holo_orange_light"
        app:srcCompat="@drawable/add" />

    <Button
        android:id="@+id/set_task_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="@android:color/holo_orange_light"
        android:text="Back"
        android:textColor="@android:color/background_light" />

    <TextView
        android:id="@+id/text3"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_marginTop="106dp"
        android:text="Date:" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_alignStart="@+id/textView"
        android:layout_marginTop="172dp"
        android:text="Time:" />
</RelativeLayout>
