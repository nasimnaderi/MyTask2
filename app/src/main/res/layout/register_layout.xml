<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back">

    <android.support.design.widget.TextInputEditText
        android:id="@+id/register_password"
        android:layout_width="30mm"
        android:textColor="@android:color/black"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="120dp"
        android:layout_marginTop="262dp" />

    <android.support.design.widget.TextInputEditText
        android:id="@+id/register_family"
        android:layout_width="30mm"
        android:textColor="@android:color/black"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="120dp"
        android:layout_marginTop="214dp" />

    <android.support.design.widget.TextInputEditText
        android:id="@+id/register_email"
        android:layout_width="30mm"
        android:textColor="@android:color/black"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="120dp"
        android:layout_marginTop="120dp" />

    <android.support.design.widget.TextInputEditText
        android:id="@+id/register_name"
        android:layout_width="30mm"
        android:textColor="@android:color/black"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="120dp"
        android:layout_marginTop="168dp" />

    <android.support.design.widget.TextInputEditText
        android:id="@+id/register_user_name"
        android:layout_width="30mm"
        android:textColor="@android:color/black"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="120dp"
        android:layout_marginTop="71dp" />

    <TextView
        android:id="@+id/txt4"
        android:layout_width="wrap_content"
        android:textColor="@android:color/black"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="277dp"
        android:text="Password:" />



    <TextView
        android:id="@+id/txt5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_alignTop="@+id/txt1"
        android:layout_alignParentStart="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="144dp"
        android:text="Family:" />

    <TextView
        android:textColor="@android:color/black"
        android:id="@+id/txt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="183dp"
        android:text="Name:" />

    <TextView
        android:textColor="@android:color/black"
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="129dp"
        android:text="Email:" />

    <TextView
        android:textColor="@android:color/black"
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="33dp"
        android:layout_marginTop="84dp"
        android:text="User name:" />

    <RadioButton
        android:textColor="@android:color/black"
        android:id="@+id/register_golden_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="119dp"
        android:text="Golden" />

    <RadioButton
        android:textColor="@android:color/black"
        android:id="@+id/register_silver_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_golden_btn"
        android:layout_alignParentStart="true"
        android:layout_marginTop="-119dp"
        android:text="Silver" />

    <RadioButton
        android:id="@+id/register_regular_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_silver_btn"
        android:layout_alignParentStart="true"
        android:text="Regular" />

    <Button
        android:id="@+id/user_register_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:background="@android:color/holo_orange_light"
        android:text="Register"
        android:textColor="@android:color/darker_gray" />
</RelativeLayout>
